{
    "name": "fabiang/xmpp",
    "description": "Library for XMPP protocol (Jabber) connections",
    "license": "BSD-2-Clause",
    "homepage": "https://github.com/fabiang/xmpp",
    "keywords": ["jabber", "xmpp"],
    "authors": [
        {
            "name": "Fabian Grutschus",
            "email": "f.grutschus@lubyte.de",
            "homepage": "http://www.lubyte.de/",
            "role": "developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Fabiang\\Xmpp\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"
        ],
        "psr-4": {
            "Fabiang\\Xmpp\\": "tests/src/"
        }
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "behat/behat": "^2.5.5",
        "monolog/monolog": "^1.22",
        "phpunit/phpunit": "^5.7.20",
        "satooshi/php-coveralls": "^1.0",
        "symfony/console": "^2.8",
        "symfony/dependency-injection": "^2.8",
        "symfony/finder": "^2.8"
    },
    "suggest": {
        "psr/log-implementation": "Allows more advanced logging of the xmpp connection"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "platform": {
            "php": "5.6"
        },
        "sort-packages": true
    },
    "archive": {
        "exclude": [
            ".gitignore",
            ".gitattributes",
            ".scrutinizer.yml",
            ".travis.yml",
            "/tests",
            "/docs",
            "/bin",
            "/example.php"
        ]
    }
}
